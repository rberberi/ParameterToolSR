<UserControl x:Class="PTSRDesktopUI.Views.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PTSRDesktopUI.Views"
             mc:Ignorable="d" Background="White" FontSize="24"
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="Changes" AlternatingRowBackground="Beige" CanUserAddRows="False"
                  AutoGenerateColumns="False" Padding="5">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="Alter Parameter" Binding="{Binding Path=reference_value}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Neuer Parameter" Binding="{Binding Path=new_value}"/>
                <DataGridCheckBoxColumn Header="Validiert" Binding="{Binding Path=confirmed}" />
            </DataGrid.Columns>
        </DataGrid>
            
    </Grid>
</UserControl>
